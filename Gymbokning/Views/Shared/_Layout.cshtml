<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gymbokning</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.9.1/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/Gymbokning.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-success border-bottom box-shadow mb-3">
            <!-- Light green background -->
            <div class="container-fluid">
                <a class="navbar-brand fw-bolder fs-3" asp-area="" asp-controller="GymClasses" asp-action="Index"><i>Gymbokning</i></a> <!-- Italic and bold -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark fs-6" asp-area="" asp-controller="GymClasses" asp-action="Index">Home</a> 
                        </li>

                        @if (User.Identity!.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark fs-6" asp-area="" asp-controller="GymClasses" asp-action="BookedClasses">Booked Classes</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark fs-6" asp-area="" asp-controller="GymClasses" asp-action="History">History</a>
                            </li>
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark fs-6" asp-area="" asp-controller="GymClasses" asp-action="Create">Create</a>
                                </li>
                            }
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container flex-grow-1">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer fixed at the bottom with matching background -->
    <footer class="bg-success text-white fixed-bottom text-center py-3 mt-auto">
        <div class="container">
            &copy; 2024 - Gymbokning (Ammara Shakeel) <a class="text-white" asp-area="" asp-controller="GymClasses" asp-action="Index"></a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
